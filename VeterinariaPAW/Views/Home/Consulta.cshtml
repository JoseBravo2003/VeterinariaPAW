@{
    ViewData["Title"] = "Consultas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>

    <div class="text-center">
        <h1 class="display-4">Consultas PAW</h1>
        <p class="lead text-muted">Informacion disponible</p>
    </div>

    <!-- Seccion de informacion -->
    <section class="buy_section layout_padding" style="background-color: #f9f9f9; padding: 60px 0; text-align: center;">
        <div class="container">
            <h2 style="font-size: 2.5rem; color: #333; font-weight: bold; margin-bottom: 20px;">
                Visita nuestra tienda en línea y adquiere nuestros servicios de manera fácil y rápida.
            </h2>
            <p style="font-size: 1.2rem; color: #777; margin-bottom: 40px;">
                Te invitamos a ingresar a nuestra tienda en línea, donde podrás acceder a todos nuestros productos y servicios de forma cómoda y segura, ¡todo al alcance de un clic
            </p>
            <div>
                <a href="@Url.Action("Index", "Productos")" class="btn btn-primary" style="background-color: #2DB2B5; padding: 15px 30px; font-size: 1.1rem;">
                    Compra ahora!
                </a>
            </div>

        </div>
    </section>

    <!-- client section -->
    <section class="client_section layout_padding-bottom" style="padding: 60px 0;">
        <div class="container">
            <h2 class="text-center mb-4" style="font-size: 2.5rem; color: #333;">
                Comentarios de nuestros <span style="color: #2DB2B5;">Clientes</span>
            </h2>
            <p class="text-center mb-5" style="font-size: 1.2rem; color: #555;">
                ¡Escuche lo que nuestros felices clientes tienen que decir sobre nuestro servicio!
            </p>
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <!-- Testimonio 1 -->
                    <div class="carousel-item active">
                        <div class="card" style="border-radius: 15px; box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);">
                            <div class="card-body text-center p-5" style="background-color: #fff;">
                                <p class="mb-4" style="font-size: 1.2rem; color: #555; font-style: italic;">
                                    "Este es el mejor servicio que he usado. ¡Me ha simplificado muchísimo la vida!"
                                </p>
                                <h4 style="font-size: 1.4rem; color: #2DB2B5;">Jose </h4>
                                <span style="font-size: 1.1rem; color: #777;">Cliente</span>
                            </div>
                        </div>
                    </div>
                    <!-- Testimonio 2 -->
                    <div class="carousel-item">
                        <div class="card" style="border-radius: 15px; box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);">
                            <div class="card-body text-center p-5" style="background-color: #fff;">
                                <p class="mb-4" style="font-size: 1.2rem; color: #555; font-style: italic;">
                                    "No podria estar mas feliz con la facilidad de compra que cuenta la veteria PAW"
                                </p>
                                <h4 style="font-size: 1.4rem; color: #2DB2B5;">Rober </h4>
                                <span style="font-size: 1.1rem; color: #777;">Cliente</span>
                            </div>
                        </div>
                    </div>
                    <!-- Testimonio 3 -->
                    <div class="carousel-item">
                        <div class="card" style="border-radius: 15px; box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);">
                            <div class="card-body text-center p-5" style="background-color: #fff;">
                                <p class="mb-4" style="font-size: 1.2rem; color: #555; font-style: italic;">
                                    "Una solución confiable e innovadora que superó mis expectativas. ¡La recomiendo ampliamente!"
                                </p>
                                <h4 style="font-size: 1.4rem; color: #2DB2B5;">Luisa</h4>
                                <span style="font-size: 1.1rem; color: #777;">Cliente</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Controles del slider -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>

    <!-- info section -->
    <section class="info_section layout_padding2">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="item">
                        <div class="card" style="text-align: center; padding: 20px; background-color: #2DB2B5;">
                            <i class="fas fa-map-marker-alt" style="font-size: 3rem; color: #fff; margin-bottom: 20px;"></i>
                            <div class="detail-box">
                                <p style="font-size: 1.2rem; color: #fff;">San Jose</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="item">
                        <div class="card" style="text-align: center; padding: 20px; background-color: #2DB2B5;">
                            <i class="fas fa-phone-alt" style="font-size: 3rem; color: #fff; margin-bottom: 20px;"></i>
                            <div class="detail-box">
                                <p style="font-size: 1.2rem; color: #fff;">+506 2233-8833</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="item">
                        <div class="card" style="text-align: center; padding: 20px; background-color: #2DB2B5;">
                            <i class="fas fa-envelope" style="font-size: 3rem; color: #fff; margin-bottom: 20px;"></i>
                            <div class="detail-box">
                                <p style="font-size: 1.2rem; color: #fff;">PAW@gmail.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end info_section -->
</body>
