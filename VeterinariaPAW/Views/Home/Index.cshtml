@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>

    <div class="text-center">
        <h1 class="display-4">Tienda Veterinaria PAW</h1>
        <p class="lead text-muted">Todo lo que tu mascota necesita, en un solo lugar</p>
    </div>

    <!-- Slider Section -->
    <div class="container-fluid">
        <section class="slider_section" style="position: relative; width: 100%; overflow: hidden;">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <!-- Primer item -->
                    <div class="carousel-item active">
                        <div class="slider_img-box" style="position: relative; height: 500px;">
                            <div class="img-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5);"></div>
                            <img src="https://images.pexels.com/photos/1553235/pexels-photo-1553235.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Mascota" class="slider-image" style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;">
                        </div>
                    </div>
                    <!-- Segundo item -->
                    <div class="carousel-item">
                        <div class="slider_img-box" style="position: relative; height: 500px;">
                            <div class="img-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5);"></div>
                            <img src="https://images.pexels.com/photos/1093126/pexels-photo-1093126.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Mascota" class="slider-image" style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;">
                        </div>
                    </div>
                    <!-- Tercer item -->
                    <div class="carousel-item">
                        <div class="slider_img-box" style="position: relative; height: 500px;">
                            <div class="img-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5);"></div>
                            <img src="https://images.pexels.com/photos/96428/pexels-photo-96428.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Mascota" class="slider-image" style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;">
                        </div>
                    </div>
                </div>

                <!-- Controles del slider -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </section>
    </div>
    <!-- End slider section -->
    <!-- About Section -->
    <section class="about_section layout_padding" style="background-color: #f4f4f4; padding: 50px 0;">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="img-box">
                        <img src="images/about.png" alt="" class="img-fluid" style="border-radius: 15px;">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-box">
                        <h2 class="display-4" style="font-size: 36px;">Sobre <span style="color: #2DB2B5;">PAW</span></h2>
                        <p class="text-muted" style="font-size: 1.2rem;">
                            PAW es una excelente opción para adquirir medicamentos y todo lo que necesitas para las mascotas de tu hogar. Contamos con una amplia variedad de productos y un equipo altamente capacitado para resolver todas tus dudas
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Service Section -->
    <section class="service_section layout_padding" style="padding: 50px 0;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 offset-md-2">
                    <h2 class="custom_heading" style="font-size: 32px;">Nuestros <span style="color: #2DB2B5;">Servicios</span></h2>
                    <div class="container layout_padding2">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="img_box">
                                    <img src="images/s-1.png" alt="" class="img-fluid" style="border-radius: 10px;">
                                </div>
                                <div class="detail_box">
                                    <h6>Medicamentos</h6>
                                    <p>
                                        Disponemos de una amplia variedad de medicamentos para todo tipo de animales
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="img_box">
                                    <img src="images/s-2.png" alt="" class="img-fluid" style="border-radius: 10px;">
                                </div>
                                <div class="detail_box">
                                    <h6>Hotel para mascotas</h6>
                                    <p>
                                        Contamos con un hotel de 5 estrellas, donde tus mascotas estarán en excelentes manos, con vigilancia las 24 horas del día.
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="img_box">
                                    <img src="images/s-3.png" alt="" class="img-fluid" style="border-radius: 10px;">
                                </div>
                                <div class="detail_box">
                                    <h6>Juguetes</h6>
                                    <p>
                                        Ofrecemos una gran selección de juguetes para mantener a tus mascotas felices y activas
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="images/tool.png" alt="" class="img-fluid w-100" style="border-radius: 15px;">
                </div>
            </div>
        </div>
    </section>
    <!-- End Service Section -->
   
   
    <!-- end info_section -->
</body>
