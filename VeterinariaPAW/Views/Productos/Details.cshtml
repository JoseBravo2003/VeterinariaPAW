@model VeterinariaPAW.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<section class="py-5">
    <div class="container px-4 px-lg-5">
        <div class="row align-items-center">
            <!-- IMAGEN -->
            <div class="col-md-4">
                <img class="img-fluid rounded" src="@Model.FotoUrl" alt="Imagen del Producto" />
            </div>

            <!-- DATOS -->
            <div class="col-md-8">
                <div class="card shadow-sm p-4">
                    <h3 class="mb-4">@Model.Nombre</h3>

                    <div class="mb-3"><strong>Descripción:</strong> @Model.Descripcion</div>
                    <div class="mb-3"><strong>Fecha de Caducidad:</strong> @Model.FechaCaducidad.ToString("dd/MM/yyyy")</div>
                    <div class="mb-3"><strong>SKU:</strong> @Model.SKU</div>
                    <div class="mb-3"><strong>Precio:</strong> ₡@Model.Precio</div>
                    <div class="mb-3"><strong>Stock:</strong> @Model.Stock unidades</div>
                    <div class="mb-3"><strong>Tipo:</strong> @Model.Tipo</div>
                    <div class="mb-3"><strong>Estado:</strong> @((Model.Estado ?? false) ? "Activo" : "Desactivado")</div>
                    <div class="mb-3"><strong>Uso Clínico:</strong> @((Model.Clinico ?? false) ? "Sí" : "No")</div>
                    <div class="mb-3"><strong>Categoría:</strong> @Model.Categoria?.Nombre</div>
                    <div class="mb-3"><strong>Proveedor:</strong> @Model.Proveedor?.Nombre</div>

                    <!-- BOTONES -->
                    <form asp-action="Index" method="get">
                        <button type="submit" class="btn btn-outline-secondary w-100 mt-3 rounded-pill">Volver</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
