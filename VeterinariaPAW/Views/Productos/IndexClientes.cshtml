@model IEnumerable<VeterinariaPAW.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Productos</h1>

<div class="row row-cols-1 row-cols-md-3 g-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm border-light rounded-3 h-100">
                @if (!string.IsNullOrEmpty(item.FotoUrl))
                {
                    <img src="@item.FotoUrl" alt="Foto del producto" class="card-img-top" style="width: 450px; height: 300px; object-fit: cover;" />
                }
                else
                {
                    <img src="https://via.placeholder.com/450x300" alt="Foto del producto" class="card-img-top" style="width: 450px; height: 300px; object-fit: cover;" />
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-center text-primary fs-5">@item.Nombre</h5>
                    <p class="card-text text-muted fs-6">@item.Descripcion</p>
                    <p class="card-text text-success fs-6"><strong>Precio: </strong>@item.Precio.ToString()</p>

                    <!-- Boton para Detalles -->
                    <div class="mt-auto text-center">
                        <a href="@Url.Action("DetailsClientes", "Productos", new { id = item.Id })" class="btn btn-warning w-100 btn-sm">
                            Ver Detalles
                        </a>
                    </div>
                    <!-- Boton para Comprar -->
                    <div class="mt-auto text-center">
                        @* <button class="btn btn-warning w-100 btn-sm">Comprar</button> *@
                        <a asp-controller="Carrito" asp-action="Agregar" asp-route-id="@item.Id" class="btn btn-primary">Agregar al carrito</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
