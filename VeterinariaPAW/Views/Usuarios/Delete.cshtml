@model VeterinariaPAW.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}
<!-- HEADER -->
<header class="py-5 rounded position-relative" style="background-image: url('https://images.pexels.com/photos/1174768/pexels-photo-1174768.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1'); background-size: cover; background-position: center; overflow: hidden;">

    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1;"></div>

    <div class="container px-4 px-lg-5 my-5 position-relative" style="z-index: 2;">
        <div class="text-center text-white">
            <h1 class="text-center mb-4 text-white">Eliminar Usuario</h1>
        </div>
    </div>
</header>
<!-- DATOS -->
<section class="py-5">
    <div class="container px-4 px-lg-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4">
                    <h3 class="mb-4">Datos del Usuario</h3>

                    <div class="mb-3"><strong>Nombre de Usuario:</strong> @Model.NombreUsuario</div>
                    <div class="mb-3"><strong>Nombre Completo:</strong> @Model.NombreCompleto</div>
                    <div class="mb-3"><strong>Correo:</strong> @Model.Correo</div>
                    <div class="mb-3"><strong>Cédula:</strong> @Model.Cedula</div>
                    <div class="mb-3"><strong>Teléfono:</strong> @Model.Telefono</div>
                    <div class="mb-3"><strong>Rol:</strong> @Model.Rol</div>

                    <!-- BOTONES -->
                    <form asp-action="Delete">
                        <h6 class="mt-4">¿Está seguro de que desea eliminar este usuario? Esta acción no se puede deshacer.</h6>
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-primary w-100 mt-3" style=" background-color:#BB2D3B">Eliminar</button>
                    </form>
                    <form asp-action="Index" method="get">
                        <button type="submit" class="btn btn-outline-secondary w-100 mt-3 rounded-pill">Volver</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
