@model VeterinariaPAW.Models.Usuario

@{
    ViewData["Title"] = "Mi Perfil";
}

<h2>Mi Perfil</h2>

<div class="card border rounded p-4 shadow" style="max-width: 600px; margin: auto;">
    <h4>@Model.NombreCompleto</h4>
    <p><strong>Usuario:</strong> @Model.NombreUsuario</p>
    <p><strong>Correo:</strong> @Model.Correo</p>
    <p><strong>Cédula:</strong> @Model.Cedula</p>
    <p><strong>Teléfono:</strong> @Model.Telefono</p>
    <p><strong>Rol:</strong> @Model.Rol</p>

    <a class="btn btn-primary mt-3" asp-action="Edit" asp-route-id="@Model.Id">Editar Perfil</a>
</div>
